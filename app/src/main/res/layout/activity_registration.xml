<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#31314f"
    android:orientation="vertical"
    tools:context=".Registration">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="121dp"
        android:layout_marginRight="121dp"
        android:gravity="center"
        android:text="Create Account"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHighlight="#FFFFFF"
        android:textSize="24dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt1"
        android:layout_marginTop="40dp"
        android:theme="@style/AppTheme">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fname_text"
                android:layout_width="137dp"
                android:layout_height="34dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="First Name"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/lname_text"
                android:layout_width="137dp"
                android:layout_height="34dp"
                android:layout_below="@id/fname_text"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="31dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Last Name"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fname"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/fname_text"
                android:ems="10"
                android:fontFamily="@font/nunito_bold"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fname"
                android:layout_alignParentRight="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="7dp"
                android:layout_toRightOf="@id/lname_text"
                android:ems="10"
                android:fontFamily="@font/nunito_bold"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFFFF"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/email_text"
                android:layout_width="137dp"
                android:layout_height="34dp"
                android:layout_below="@id/lname_text"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="27dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lname"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="17dp"
                android:layout_marginRight="-10dp"
                android:layout_toRightOf="@+id/email_text"
                android:fontFamily="@font/nunito_bold"
                android:hint="hello@gmail.com"
                android:inputType="textEmailAddress"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"></EditText>

            <TextView
                android:id="@+id/password_text"
                android:layout_width="137dp"
                android:layout_height="34dp"
                android:layout_below="@id/email_text"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="29dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Password"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/password"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_text"
                android:layout_alignParentRight="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/password_text"
                android:ems="10"
                android:fontFamily="@font/nunito_bold"
                android:hint="Password"
                android:inputType="textPassword"
                android:shadowColor="#E81F2753"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <Button
                android:id="@+id/regis_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pincode_text"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="41dp"
                android:layout_marginEnd="165dp"
                android:layout_marginRight="165dp"
                android:background="@drawable/reg_shaper"
                android:onClick="AddUser"
                android:text="Register"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/bld_grp"
                android:layout_width="137dp"
                android:layout_height="34dp"
                android:layout_below="@id/password_text"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Blood Group"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="162dp"
                android:layout_height="35dp"
                android:layout_below="@id/password"
                android:layout_alignRight="@id/bld_grp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="77dp"
                android:layout_toRightOf="@id/bld_grp"
                android:background="#00FFFFFF"
                android:foreground="#28FFFFFF"
                android:spinnerMode="dialog"></Spinner>

            <TextView
                android:id="@+id/address_text"
                android:layout_width="137dp"
                android:layout_height="34dp"
                android:layout_below="@id/bld_grp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="34dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Address"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bld_grp"
                android:layout_alignParentRight="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/address_text"
                android:ems="10"
                android:fontFamily="@font/nunito_bold"
                android:hint="Village,Mandal.District"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFFFF"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/pincode_text"
                android:layout_width="137dp"
                android:layout_height="34dp"
                android:layout_below="@id/address_text"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="PinCode"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address"
                android:layout_alignParentRight="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/pincode_text"
                android:ems="10"
                android:fontFamily="@font/nunito_bold"
                android:hint="Eg: 515000"
                android:inputType="numberSigned"
                android:textColor="@color/white"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFFFF"
                android:textSize="18dp" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>